{
  "skills": {
    "tailwindcss": {
      "type": "domain",
      "enforcement": "suggest",
      "priority": "high",
      "promptTriggers": {
        "keywords": [
          "tailwind",
          "tailwindcss",
          "tailwind css",
          "utility class",
          "responsive design",
          "className"
        ],
        "intentPatterns": [
          "(style|design|layout).*(tailwind|utility)",
          "tailwind.*(class|pattern|design)",
          "(responsive|mobile).*(design|layout)"
        ]
      },
      "fileTriggers": {
        "pathPatterns": [
          "**/tailwind.config.js",
          "**/tailwind.config.ts",
          "**/tailwind.config.mjs",
          "**/*.tsx",
          "**/*.jsx"
        ],
        "contentPatterns": [
          "className=['\"]",
          "class=['\"].*\\b(flex|grid|p-|m-|text-|bg-|border)",
          "@tailwind",
          "@apply"
        ]
      }
    }
  }
}
